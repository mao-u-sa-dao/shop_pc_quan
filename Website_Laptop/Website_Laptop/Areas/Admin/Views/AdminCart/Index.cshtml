@using Website_Laptop.Models;
@model IEnumerable<Website_Laptop.Models.DonhangPc>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Đơn Hàng</h2>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Mã Đơn Hàng
            </th>
            <th>
                Mã User
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDonHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                    @if(item.StatusDonhang == 1)
                    {
                    <td>Chưa xử lí!</td>
                }
                else
                {
                    <td>Đã duyệt!</td>
                }
                <td>
                    <a asp-action="ViewCart" asp-controller="AdminCart" asp-route-maDonhang="@item.MaDonHang">View</a> |
                    <a asp-action="Delete" asp-route-maSanPham="@item.MaDonHang">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
