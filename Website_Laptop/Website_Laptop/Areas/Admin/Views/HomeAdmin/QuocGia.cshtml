@model IEnumerable<Website_Laptop.Models.PcQuocGiaSx>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "QuocGia";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>QuocGia</h1>

<p>
    <a asp-action="AddQuocGia">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenQuocGiaSx)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenQuocGiaSx)
            </td>
            <td>
                <a asp-action="EditQuocGia" asp-route-id="@item.MaQuocGiaSx">Edit</a> |
                <a asp-action="DetailsQuocGia" asp-route-id="@item.MaQuocGiaSx">Details</a> |
                <button onclick="DeleteQuocGia('@item.MaQuocGiaSx')">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

<script>

    function DeleteQuocGia(maQuocGia) {
        if (confirm("Bạn có chắc muốn xóa quốc gia này không?")) {
            $.ajax({
                type: "DELETE",
                url: "/api/QuocGiaApi/" + maQuocGia,
                success: function (success) {
                    // Hiển thị thông báo thành công bằng SweetAlert2
                    Swal.fire({
                        icon: 'success',
                        title: 'Xóa thành công',
                        text: 'Quốc gia đã được xóa thành công.',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Chuyển hướng đến trang cụ thể
                            window.location.href = '/Admin/QuocGia';
                        }
                    });
                },
                error: function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Lỗi',
                        text: 'Không thể xóa quốc gia này khi đang liên quan tới sản phẩm',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/Admin/QuocGia';
                        }
                    });
                }
            });
        }
    }
</script>