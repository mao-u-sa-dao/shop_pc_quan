@{
    ViewData["Title"] = "ThemLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model Website_Laptop.Models.PcLoaiSp;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!-- Nội dung trang -->

<h2>Edit Product</h2>
<p id="consol"></p>


<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemLoaiSanPham">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label"></label>
                <input asp-for="MaLoai" id="MaLoai" class="form-control" />
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label"></label>
                <input asp-for="TenLoai" id="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" onclick="addLoai()" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>

    function addLoai() {
        var maLoai = document.getElementById('MaLoai').value;
        var tenLoai = document.getElementById('TenLoai').value;


        axios.post('/api/CategoryApi', {
            maLoai: maLoai,
            tenLoai: tenLoai,

        })
            .then(response => {

                console.log('Category added successfully');

            })
            .catch(error => {
                console.error('Error adding product:', error.response.data);
            });
    }


</script>

