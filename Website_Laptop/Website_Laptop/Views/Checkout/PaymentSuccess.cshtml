@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>@TempData["Message"]</h3>
<div class="modal" id="successModal" tabindex="-1" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Payment Success</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Đặt hàng thành công! Vui lòng chờ duyệt đơn hàng</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Ok()" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Bootstrap CSS and JavaScript -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script>
        // Show the success modal when the view is loaded
        $(document).ready(function () {
            $('#successModal').modal('show');
        });

        // Redirect to the Cart Index page upon clicking OK in the modal
        function Ok() {
        window.location.href = '@Url.Action("Index", "Cart")';
        }

    </script>